.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding:  0;
  box-sizing: border-box;
}
.hade{
  color: #000;
  width:90% ;
 
  overflow: hidden;
  position: relative;
  padding:100rpx 5%; 
    text-align: center;
}
.hade-ba{
  position:absolute ;
  z-index: -99;
  top: 0;
  left: 0;
  width: 100%;
  height: 900rpx;
  filter: blur(10rpx);
}
.hade-img image{
  width: 200rpx;
  height: 200rpx;
  border-radius:50%; 
  text-align: center;
}
.hade-p>view{
  padding:10rpx; 
  color: #000;
}
.hade-p view>image{ 
  width: 40rpx;
  height: 40rpx;
  margin-left:20rpx; 
}
.body{
  width: 100%;
}
.body>view{
  width: 33.000%;
  height:200rpx;
  text-align: center;
   line-height: 100rpx;
  float: left;
  border-bottom:1rpx solid #666; 
}
.hade-ph{
  position: absolute;
  width:50rpx;
  height: 50rpx;
  top: 50rpx;
  right: 50rpx;
 text-align: center;
 border: 1rpx solid #fff;
 border-radius:50%; 
 line-height: 45rpx;
}
.hade-ph image{
  width:50%;
  height: 50%;
 
}

.body-li:nth-child(3n-1){
   border-left:1rpx solid #666; 
  border-right:1rpx solid #666; 
}
.body-li-img{
 width: 100%;
 height: 50%;
  
}
.body-li-img image{
  margin-top:30rpx;
  width: 80rpx;
   height:80rpx; 
}
