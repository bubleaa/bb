.container {
  height: 100%;
  width:100%;
  padding: 0; 
  display: flex;
 
  align-items: center;
  

  box-sizing: border-box;
}

.hade{
  color: #000;
  width:90% ;
 
  overflow: hidden;
  position: relative;
  padding:100rpx 5%; 
    text-align: center;
}
.hade-ba{
  position:absolute ;
  z-index: -99;
  top: 0;
  left: 0;
  width: 100%;
  height: 900rpx;
  filter: blur(10rpx);
}
.hade-img image{
  width: 200rpx;
  height: 200rpx;
  border-radius:50%; 
  text-align: center;
}
.body{
   width:90% ;
  position: relative;
  padding:10rpx 5%; 
}
.hade-p>view{
  padding:10rpx; 
  color: #fff;
}
.hade-p-a{
   border-radius: 10%;
   background-color:rgba(0, 0, 0, 0.2) ;
  padding:10rpx; 
}
.foot-ul{
  height:500rpx;
  width:100%;
 white-space:nowrap;
 padding:30rpx 0; 
}
.foot-li{
  width:300rpx;
  
  display:inline-block;
   margin-left:50rpx ;
}
.foot-li:first-child{
margin-left:0 ;
}
.foot-li-img,.foot-li-img>image{
  height:400rpx;
  width:100%;  
}
.foot-li-p{
  padding:10rpx 0; 
  text-align: center;
}
